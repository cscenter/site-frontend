<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  {#TODO: Придумать title и описание#}
  <title>{% block title %}Личный кабинет CSC{% endblock title %}</title>
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="description"
        content="Личный кабинет пользователя в Computer Science Center.">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="google-site-verification" content="pBs4x-E9VGlX-gA7WxCNEqcYB0TYJCSmcZtSeLBpEgk"/>

  <link rel="shortcut icon" type="image/png" href="{{ static("v2/img/favicon.png") }}">
  <link href="{{ static("v2/dist/css/main.css") }}" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Fira+Sans:300,400,600&amp;subset=cyrillic" rel="stylesheet">

  {% block stylesheets %} {% endblock stylesheets %}

  <script type="text/javascript">
    window.__CSC__ = {
      config: {
        csrfCookieName: "csrftoken",
        sentryDSN: "",
      },
      notifications: {{ messages(request)|tojson }},
      sprites: ["{{static("v2/dist/img/sprites/common.svg") }}"]
    };
  </script>
</head>

{% import "v2/macros/_global.jinja2" as macros %}
{% import "v2/lms/layouts/_top-menu.jinja2" as top_menu %}

<body {% block body_attrs %}class="grey-bg _lms"{% endblock body_attrs %}>

<div class="svg-inline">
  {% block sprites %}
    <script type="text/javascript">
      (window.__CSC__.sprites = window.__CSC__.sprites || []).push("{{ static("v2/dist/img/sprites/ui.svg")  }}");
    </script>
  {% endblock sprites %}
</div>

{% include "v2/lms/layouts/_sidebar.jinja2" %}

{% block menu %}
  {{ top_menu.render(show_notification=False, has_avatar=False) }}
{% endblock menu %}

<main class="container mt-10">
  {% block content %}<p>place page content here</p>{% endblock content %}
</main>

{% block footer -%}
{%- endblock footer %}

{{ render_bundle('runtime', config='V2') }}
{{ render_bundle('common', config='V2') }}
{{ render_bundle('main', config='V2') }}
</body>
</html>
