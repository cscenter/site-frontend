{% macro person_card(name, work, job, image_url='', home_page='' ) %}
    {% if home_page != '' %}
      <a href="{{ home_page }}/" target="_blank" rel="noopener"
         class="card _user mb-6" itemscope itemtype="https://schema.org/Person">
    {% else -%}
      <div class="card _user mb-6" itemscope itemtype="https://schema.org/Person">
    {% endif -%}
    <div class="card__img">
        <img src="{{ static(image_url) }}" alt="{{ name }}" itemprop="image">
    </div>
    <div class="card__title" itemprop="name">
      {{ name }}
    </div>
  {% if work %}
    <div class="card__subtitle" itemprop="worksFor">
      {{ work }}
  {% else -%}
  <div class="card__subtitle" itemprop="jobTitle">
      {{ job }}
    {% endif -%}
    </div>
    {% if home_page %}
      </a>
    {% else -%}
      </div>
    {% endif -%}
{%- endmacro %}

